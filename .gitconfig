[user]
	name = Steve Caphane
	email = steve@caphane.com
[merge]
	conflictstyle = diff3
[branch]
	autosetuprebase = always
	autosetupmerge = true
[diff]
	renamelimit = 0
[core]
	pager = less -FRSX
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore
[apply]
	whitespace = fix


[alias]
	s = status
	log-status = log --name-status
	log-short  = log --abbrev-commit --pretty=oneline
	log-tree   = log --abbrev-commit --pretty=oneline --graph --decorate
	pom = push origin master
	diffname = diff --name-only

[color]
	ui = auto
[color "branch"]
    current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta 
	old = red
	new = green
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[push]
	default = tracking
